{
  "name": "React Native Web Extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "description...",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./extension/main.js"],
      "css": ["/extension/main.css"]
    }
  ],
  "browser_action": {
    "default_popup": "./extension/popup.html"
  },
  "permissions": ["storage"]
}